<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<!-- Appender, Layout 설정 -->
	<Appenders>
		<Console name="stdout" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p %m%n" />
		</Console>
	</Appenders>

	<!-- Logger 설정 -->
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="stdout" />
		</Root>
	</Loggers>

</Configuration>